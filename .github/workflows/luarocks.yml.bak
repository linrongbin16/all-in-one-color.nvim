name: LuaRocks
on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  workflow_dispatch:

jobs:
  luarocks-release:
    runs-on: ubuntu-latest
    name: LuaRocks upload
    steps:
      - name: Checkout
        uses: actions/checkout@v3
      - name: LuaRocks Upload
        uses: nvim-neorocks/luarocks-tag-release@v5
        if: startsWith(github.ref, 'refs/tags/')
        env:
          LUAROCKS_API_KEY: ${{ secrets.LUAROCKS_API_KEY }}
